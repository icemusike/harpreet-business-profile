---
const services = [
  {
    title: "Virtual Assistance",
    icon: "fas fa-tasks",
    description: "Comprehensive administrative support including email management, calendar scheduling, data entry, and document preparation."
  },
  {
    title: "Team Management",
    icon: "fas fa-users",
    description: "Effective coordination and leadership of remote teams, ensuring clear communication, task delegation, and goal achievement."
  },
  {
    title: "Project Coordination",
    icon: "fas fa-project-diagram",
    description: "Overseeing project timelines, coordinating team members, tracking progress, and ensuring timely delivery of deliverables."
  },
  {
    title: "Customer Support",
    icon: "fas fa-headset",
    description: "Professional handling of customer inquiries, issue resolution, and maintaining high satisfaction levels through responsive service."
  },
  {
    title: "Social Media Management",
    icon: "fas fa-hashtag",
    description: "Strategic content planning, creation, and scheduling across various social media platforms to enhance your online presence."
  },
  {
    title: "Process Optimization",
    icon: "fas fa-cogs",
    description: "Analyzing and improving business processes to increase efficiency, reduce costs, and enhance overall productivity."
  }
];
---

<section id="services" class="section services">
  <div class="bg-shape shape-1 animate-pulse"></div>
  
  <div class="container">
    <h2 class="section-title text-center">My Services</h2>
    <p class="section-subtitle text-center">Comprehensive solutions to help your business thrive</p>
    
    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="service-icon">
            <i class={service.icon}></i>
          </div>
          <h3>{service.title}</h3>
          <p>{service.description}</p>
          <div class="service-hover">
            <span>Learn More</span>
            <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      ))}
    </div>
    
    <div class="cta-container text-center">
      <p>Looking for a customized solution for your business?</p>
      <a href="#contact" class="btn">Request a Free Consultation</a>
    </div>
  </div>
</section>

<style>
  .services {
    background-color: var(--secondary);
    position: relative;
    overflow: hidden;
  }

  .section-subtitle {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: var(--primary);
    font-weight: 500;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;
    margin-bottom: 4rem;
  }

  .service-card {
    text-align: center;
    padding: 3rem 2rem;
    border-radius: 16px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    z-index: 1;
    overflow: hidden;
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .service-icon {
    width: 90px;
    height: 90px;
    margin: 0 auto 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    color: var(--text-light);
    border-radius: 50%;
    font-size: 2.2rem;
    box-shadow: 0 10px 20px rgba(106, 62, 161, 0.2);
    position: relative;
    z-index: 1;
    transition: all 0.4s ease;
  }

  .service-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    padding: 5px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0) 50%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0.7;
  }

  .service-card h3 {
    margin-bottom: 1.2rem;
    font-size: 1.6rem;
    color: var(--primary);
    position: relative;
    display: inline-block;
  }

  .service-card h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 3px;
    background: var(--gradient-primary);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .service-card p {
    color: var(--text-dark);
    opacity: 0.8;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .service-hover {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 600;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.3s ease;
  }

  .service-hover i {
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-hover);
  }

  .service-card:hover .service-icon {
    transform: scale(1.1);
  }

  .service-card:hover h3::after {
    width: 60px;
  }

  .service-card:hover .service-hover {
    opacity: 1;
    transform: translateY(0);
  }

  .service-card:hover .service-hover i {
    transform: translateX(5px);
  }

  .cta-container {
    background: var(--gradient-primary);
    padding: 4rem 3rem;
    border-radius: 16px;
    color: var(--text-light);
    margin-top: 3rem;
    box-shadow: var(--shadow-lg);
    position: relative;
    overflow: hidden;
  }

  .cta-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.2) 0%, transparent 20%),
      radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.2) 0%, transparent 20%);
    z-index: 0;
  }

  .cta-container p {
    font-size: 1.3rem;
    margin-bottom: 1.8rem;
    position: relative;
    z-index: 1;
    font-weight: 500;
  }

  .cta-container .btn {
    background-color: var(--text-light);
    color: var(--primary);
    position: relative;
    z-index: 1;
  }

  .cta-container .btn:hover {
    background-color: var(--primary-dark);
    color: var(--text-light);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-container {
      padding: 3rem 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
        }
      });
    }, { threshold: 0.1 });
    
    document.querySelectorAll('.service-card').forEach(card => {
      card.style.animationPlayState = 'paused';
      observer.observe(card);
    });
  });
</script>
